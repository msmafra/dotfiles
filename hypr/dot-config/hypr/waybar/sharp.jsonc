{
  "id": "sharpbar",
  "exclusive": true,
  "layer": "top",
  "position": "top",
  "height": 32,
  "width": "",
  "reload_style_on_change": true,
  "include": [
    "$HOME/.config/hypr/waybar/output.jsonc"
  ],
  "modules-left": [
    "custom/appmenu",
    "hyprland/workspaces",
    "hyprland/window"
  ],
  "modules-center": [
    "custom/hyprbars",
    "custom/separator",
    "clock",
    "custom/separator",
    "idle_inhibitor",
    "custom/separator",
    "group/group-privacy",
    "gamemode",
    "hyprland/submap"
  ],
  "modules-right": [
    // "group/group-tools",
    "group/group-appicons",
    "wireplumber",
    "network",
    "bluetooth",
    "group/group-battery",
    "power-profiles-daemon",
    "custom/swaync",
    "custom/power"
  ],
  "hyprland/workspaces": {
    "active-only": false,
    "all-outputs": false,
    "show-special": true,
    "special-visible-only": false,
    "sort-by": "default",
    "on-click": "activate",
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1",
    "include": [
      "$HOME/.config/hypr/waybar/workspaces.jsonc"
    ],
    "format": "{name}",
    "format-window-separator": " | ",
    "format-icons": {
      "1": "Û∞é§",
      "2": "Û∞éß",
      "3": "Û∞é™",
      "4": "Û∞é≠",
      "5": "Û∞é±",
      "6": "Û∞é≥",
      "7": "Û∞é∂",
      "8": "Û∞éπ",
      "9": "Û∞éº",
      "10": "Û∞ΩΩ",
      "urgent": "!",
      "active": "*",
      "default": "ÔÉà"
    }
  },
  "hyprland/window": {
    "separate-outputs": true,
    "format": "{initialClass}",
    "icon": false,
    "icon-size": 12
  },
  "hyprland/submap": {
    "format": "Û∞åè {}",
    "rotate": "5",
    "default-submap": "true",
    "max-length": 8,
    "tooltip": true,
    "tooltip-format": "Û∞åè {} is active. Press ESC to exit.",
    "alway-on": true
  },
  "hyprland/language": {
    "format": "{short} {variant}"
  },
  "clock": {
    "timezone": "America/Sao_Paulo",
    "format": "{:L%a %d %R}",
    "today-format": "<b>{}</b>",
    "on-click": "uwsm app -- gnome-calendar",
    "tooltip-format": "<tt><big>{calendar}</big></tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 6,
      "weeks-pos": "left",
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "{}",
        "days": "{}",
        "weeks": "{}",
        "weekdays": "{}",
        "today": "{}",
      },
    },
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "‚òï",
      "deactivated": "‚òï"
    },
    "tooltip": true,
    "tooltip-format-deactivated": "Sleep/screen lock is not blocked",
    "tooltip-format-activated": "Sleep/screen lock is now blocked",
    "start-activated": false,
    "timeout": 20
  },
  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": {
      "numlock": "N {icon}",
      "capslock": "C {icon}",
    },
    "format-icons": {
      "locked": "ÔÄ£",
      "unlocked": "ÔÇú",
    },
  },
  "network": {
    "interval": 60,
    "on-click": "uwsm app -- cosmic-settings network",
    "on-click-right": "uwsm app -- nm-connection-editor --show",
    "tooltip": true,
    "format": "{icon}",
    "format-alt": "{ifname}: {ipaddr}/{cidr}",
    "format-wifi": "{icon}",
    "format-icons": [
      "Û∞§Ø",
      "Û∞§ü",
      "Û∞§¢",
      "Û∞§•",
      "Û∞§®"
    ],
    "format-linked": "Û∞åò",
    "format-ethernet": "Óºâ",
    "format-disconnected": "Û∞≤õ",
    "tooltip-format": "{ifname} via {gwaddr}",
    "tooltip-format-wifi": "{icon} {essid} ({frequency}GHz Û∞π§: {signalStrength}%/{signaldBm}dBm)",
    "tooltip-format-linked": "{ifname} (No IP)",
    "tooltip-format-ethernet": "{ifname} via {gwaddr} - {bandwidthUpBytes}/{bandwidthDownBytes}/{bandwidthTotalBytes}",
    "tooltip-format-disconnected": "Disconnected!",
  },
  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "Û∞°≥",
      "performance": "Û∞°¥",
      "balanced": "Û∞°µ",
      "power-saver": "Û∞°≥",
    },
  },
  "group/group-dockish": {
    "orientation": "inherit",
    "drawer": {
      "click-to-reveal": false,
      "transition-duration": 600,
      "children-class": "drawer-child",
      "transition-left-to-right": true,
    },
    "modules": [
      "hyprland/workspaces",
      "wlr/taskbar",
      "tray"
    ],
  },
  "group/group-statuses": {
    "orientation": "inherit",
    "drawer": {
      "click-to-reveal": true,
      "transition-duration": 800,
      "children-class": "drawer-child",
      "transition-left-to-right": false,
    },
    "modules": [
      "custom/statuses-button",
      "temperature",
      "cpu",
      "disk",
      "memory",
    ],
  },
  "group/group-backlight": {
    "orientation": "horizontal",
    "drawer": {
      "click-to-reveal": true,
      "transition-duration": 800,
      "children-class": "drawer-child",
      "transition-left-to-right": false,
    },
    "modules": [
      "backlight",
      "backlight/slider"
    ],
  },
  "backlight": {
    "format": "{icon}",
    "format-icons": [
      "Û∞πê",
      "Û±©é",
      "Û±©è",
      "Û±©ê",
      "Û±©ë",
      "Û±©í",
      "Û±©ì",
      "Û±©î",
      "Û±©ï",
      "Û±©ñ",
      "Û∞õ®"
    ],
    "scroll-step": 1,
    "tooltip": true,
    "tooltip-format": "Click to control the brightness",
  },
  "backlight/slider": {
    "min": 5,
    "max": 100,
    "orientation": "horizontal",
  },
  "group/group-tools": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 800,
      "children-class": "tools-child",
      "transition-left-to-right": false,
    },
    "modules": [
      "custom/tools-button",
      "custom/kill",
      "custom/hyprpicker",
      "custom/clipboard_list",
      "custom/backup",
      "custom/wallpaper",
    ],
  },
  "group/group-battery": {
    "orientation": "inherit",
    "drawer": {
      "click-to-reveal": false,
      "transition-duration": 200,
      "children-class": "drawer-child",
      "transition-left-to-right": true,
    },
    "modules": [
      "battery",
      "battery#capacity"
    ],
  },
  "battery": {
    "interval": 60,
    "states": {
      "full": 100,
      "good": 75,
      "half": 50,
      "warning": 25,
      "critical": 15,
    },
    "rotate": 0,
    "format": "{icon}",
    "format-icons": [
      "ÔâÑ",
      "ÔâÉ",
      "ÔâÇ",
      "ÔâÅ",
      "ÔâÄ"
    ],
    "tooltip-format": "{capacity}% | {timeTo}",
    "max-length": 5,
  },
  "battery#capacity": {
    "interval": 60,
    "states": {
      "full": 100,
      "good": 75,
      "half": 50,
      "warning": 25,
      "critical": 15,
    },
    "rotate": 0,
    "format": "{capacity}%"
  },
  "group/group-appicons": {
    "orientation": "horizontal",
    "drawer": {
      "click-to-reveal": false,
      "transition-duration": 500,
      "children-class": "drawer-child",
      "transition-left-to-right": true,
    },
    "modules": [
      "wlr/taskbar",
      "tray"
    ],
  },
  "wlr/taskbar": {
    "format": "{icon}",
    "all-outputs": "false",
    "icon-size": 16,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "on-click-right": "minimize",
  },
  "tray": {
    "icon-size": 16,
    "spacing": 5,
    "show-passive-items": true,
    "smooth-scrolling-threshold": 1,
    "reverse-direction": true,
  },
  "group/group-audio": {
    "orientation": "horizontal",
    "tooltip": true,
    "tooltip-format": "Click to control volume or Scroll up and down",
    "on-click-right": "cosmic-settings sound",
    "drawer": {
      "click-to-reveal": false,
      "transition-duration": 800,
      "children-class": "drawer-child",
      "transition-left-to-right": false,
    },
    "modules": [
      "wireplumber",
      "pulseaudio/slider",
      "custom/myxer"
    ],
  },
  "wireplumber": {
    "format": "{icon}",
    "format-muted": "Û∞∏à",
    "on-click": "uwsm app -- swaync-client --toggle-panel --subscribe-waybar --count",
    "on-middle-click": "uwsm app -- Myxer",
    "on-click-right": "uwsm app -- cosmic-settings sound",
    // "on-scroll-up": "",
    // "on-scroll-down": "",
    "tooltip": true,
    "tooltip-format": "Click or scroll to control the volume",
    "format-icons": [
      "Û∞ïø",
      "Û∞ñÄ",
      "Û∞ïæ"
    ],
  },
  "pulseaudio/slider": {
    "min": 5,
    "max": 100,
    "orientation": "horizontal",
  },
  "pulseaudio": {
    "format": "{icon}",
    "format-muted": "ÔÄ¶{volume}%",
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "Ôäî",
      "headset": "ÔÄ•",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": [
        "ÔÄß",
        "ÔÄ®"
      ],
    },
    "on-click": "uwsm app -- pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "on-click-right": "uwsm app -- pavucontrol"
  },
  "group/group-privacy": {
    "orientation": "inherit",
    "drawer": {},
    "modules": [
      "privacy"
    ],
  },
  "privacy": {
    "modules": [
      {
        "type": "screenshare",
        "tooltip": true,
        "tooltip-icon-size": 24,
      },
      {
        "type": "audio-out",
        "tooltip": true,
        "tooltip-icon-size": 24,
      },
      {
        "type": "audio-in",
        "tooltip": true,
        "tooltip-icon-size": 24,
      },
    ],
  },
  "bluetooth": {
    "format": "{status}",
    "format-on": "Û∞ÇØ",
    "format-off": "Û∞Ç≤",
    "format-disabled": "Û∞Ç≤",
    "format-connected": "Û∞Ç∞",
    "format-connected-battery": "Û∞•à<sup>{device_battery_percentage}%</sup>",
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
    "tooltip-format-off": "!Û∞Ç≤ Bluetooth is off",
    "tooltip-format-disabled": "Û∞Ç≤ Bluetooth is disabled",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
    "on-click": "cosmic-settings bluetooth",
    "on-click-right": "blueman-manager"
  },
  "gamemode": {
    "format": "{glyph}",
    "format-alt": "{glyph} {count}",
    "glyph": "ÔÑõ",
    "hide-not-running": true,
    "use-icon": true,
    "icon-name": "input-gaming-symbolic",
    "icon-spacing": 4,
    "icon-size": 20,
    "tooltip": true,
    "tooltip-format": "Games running: {count}",
  },
  "custom/weather": {
    "format": "{}",
    "format-alt": "{alt}: {}",
    "format-alt-click": "click-right",
    "interval": 3600,
    "exec": "uwsm app -- curl --silent 'https://wttr.in/?format=+%c'",
  },
  "custom/appmenu": {
    "format": "{icon}",
    "format-icons": [
      "Ôçô"
      // "Ôåä"
      // "ÔÖº"
      // "ÔÖº"
    ],
    "tooltip": false,
    "tooltip-format": "Applications menu and search",
    "on-click": "uwsm app -- /usr/bin/nwg-drawer -open",
    "on-click-middle": "pkill -9 nwg-drawer",
  },
  "custom/search": {
    "format": "Û±Å¥",
    "tooltip": false,
    "on-click-release": "uwsm app -- nwg-drawer -open",
  },
  "custom/power": {
    "format": " {icon} ",
    "format-icons": [
      "‚èª"
    ],
    "on-click": "uwsm app -- $HOME/.config/hypr/scripts/wlogout.sh",
    "tooltip-format": "<small>Û∞ö¶ Desligar| Ôã± Reiniciar | ÔÇã Sair | ÔÄ£ Trancar | Û∞í≤  Suspender | Ôäã Hibernar </small>",
  },
  "custom/swaync": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "Û∞ö¢",
      "none": "Û∞ç°",
      "dnd-notification": "Û∞øç",
      "dnd-none": "Û±Ö≠",
      "inhibited-notification": "Û±Ö≥",
      "inhibited-none": "Û±Ö¥",
      "dnd-inhibited-notification": "Û∞ö£",
      "dnd-inhibited-none": "Û±ôé",
    },
    "return-type": "json",
    "exec-if": "command -v swaync-client",
    "exec": "swaync-client --subscribe-waybar --count",
    "on-click": "swaync-client --toggle-panel --subscribe-waybar --count",
    "on-click-right": "swaync-client --toggle-panel --subscribe-waybar --count",
    "escape": true,
  },
  "custom/tools-button": {
    "format": "ÓΩ∞",
  },
  "custom/statuses-button": {
    "format": "ÓØó",
  },
  "custom/backup": {
    "format": "Û±õü",
    "tooltip": true,
    "tooltip-format": "click: runs btrbk snapshot\nright click: runs btrbk run\nmiddle click: runs btrbk clean",
    "exec-on-event": true,
    "on-click": "uwsm app -- $HOME/Projects/backup-cli.sh snapshot",
    "on-click-right": "uwsm app -- $HOME/Projects/backup-cli.sh run",
    "on-middle-click": "uwsm app -- $HOME/Projects/backup-cli.sh clean",
  },
  "custom/myxer": {
    "format": "Û∞Ä∞",
    "tooltip": true,
    "tooltip-format": "More granular audio controls",
    "exec-on-event": true,
    "on-click": "Myxer",
    "on-click-right": "pavucontrol",
  },
  "custom/wallpaper": {
    "format": "Û∞∏â",
    "tooltip": true,
    "tooltip-format": "Changes the wallpaper (random)",
    "exec-on-event": true,
    "on-click": "uwsm app -- ~/.config/hypr/scripts/ambience.sh",
  },
  "custom/separator": {
    "format": "ÓÆä"
    // "format": "Óò°"
    // "format": "ÓΩç"
    // "format": " ",
  },
  "custom/kill": {
    "on-click": "hyprctl kill",
    "format": " Û±ìá ",
    "orientation": "horizontal",
    "tooltip": true,
    "tooltip-format": " Û±ìá  Kill window mode: To kill any window. Be careful!",
  },
  "custom/playerctl": {
    "format": "{icon}",
    "return-type": "json",
    "exec": "playerctl --player=mpd -a metadata --format '{\"text\": \"{{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
    "on-click": "playerctl --player=mpd play-pause",
    "on-click-middle": "playerctl --player=mpd previous",
    "on-click-right": "playerctl --player=mpd next",
    "format-icons": {
      "Playing": "<span foreground='#46c880'>Ôïò </span>",
      "Paused": "<span foreground='#cdd6f4'>Ô£§ </span>",
    },
  },
  "custom/playerlabel": {
    "format": "<span>{}</span>",
    "return-type": "json",
    "max-length": 48,
    "exec": "playerctl --player=mpd -a metadata --format '{\"text\": \"{{title}} - {{markup_escape(artist)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(artist)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
    "on-click": "playerctl --player=mpd play-pause",
    "on-click-middle": "playerctl --player=mpd previous",
    "on-click-right": "playerctl --player=mpd next",
  },
  "custom/clipboard_list": {
    "on-click": "uwsm app -- copyq",
    "format": "Û∞Öç",
    "tooltip-format": "Clipboard list",
  },
  "custom/hyprpicker": {
    "on-click": "uwsm app -- hyprpicker --autocopy --format=rgb",
    "format": "Û∞àä",
    "orientation": "horizontal",
  },
  "custom/nvidia": {
    "exec": "uwsm app -- nvidia-smi --query-gpu=utilization.gpu,temperature.gpu --format=csv,nounits,noheader | sed 's/\\([0-9]\\+\\), \\([0-9]\\+\\)/\\1% üå°Ô∏è\\2¬∞C/g'",
    "on-click": "uwsm app -- nvidia-smi --query-gpu=temperature.gpu --format=csv,nounits,noheader | sed 's/\\([0-9]\\+\\), \\([0-9]\\+\\)/\\1% üå°Ô∏è\\2¬∞C/g'",
    "exec-on-event": true,
    "format": "Û∞öó {}",
    "interval": 2,
  },
  "temperature": {
    "critical-threshold": 93,
    "format": "{temperatureC}¬∞C {icon}",
    "format-icons": [
      "Ôù´",
      "Ôãâ",
      "Ôù©"
    ],
  },
  "memory": {
    "format": "Ôãõ {}%",
    "format-alt": "Ôãõ {used}/{total} GiB",
    "interval": 5,
  },
  "cpu": {
    "format": "Û∞çõ {usage}%",
    "format-alt": "Û∞çõ {avg_frequency} GHz",
    "interval": 5,
  },
  "disk": {
    "format": "Û∞ãä {}%",
    "format-alt": "Û∞ãä {used}/{total} GiB",
    "interval": 20,
    "path": "/"
  },
  "custom/hyprbars": {
    "escape": true,
    "interval": 1,
    // "exec-if": "~/.config/scripts/hyprbars.sh",
    "exec": "$HOME/.config/hypr/scripts/hyprbars.sh",
    "on-click": "$HOME/.config/hypr/scripts/hyprbars.sh toggle",
    "format": "{icon}",
    "format-icons": {
      "Enabled": "Ôãê",
      "Disabled": "Ó≠ø"
    },
    "return-type": "json",
    "tooltip": true,
    "tooltip-format": "{}\nClick to toggle it."
  },
  "custom/Characters": {
    "on-click": "uwsm app -- gnome-characters",
    "format": "{icon}",
    "format-icons": {
      "Enabled": "Ôãê",
      "Disabled": "Ó≠ø"
    },
    "return-type": "json",
    "tooltip": true,
    "tooltip-format": "{}\nClick to toggle it."
  }
}
