window {
    background-color: rgba(6, 8, 21, 1);
    color: #eeeeee;
    font-family: 'Inter'
}

/* search entry */
entry {
    background-color: rgba(0, 0, 0, 0.2);
}

label {
    font-size: 16px;
}
image, img {
    background: transparent;
    border: none
}
button {
    font-size: 16px;
    color: rgba(130, 157, 218, 1);
    /* border: solid 1px rgba(13, 2, 44, 1); */
    border: none;
    border-radius: 8px;
    background: none;
    /* background-color: rgba(6, 8, 21, 0.2); */
    /* background-repeat: no-repeat; */
    /* background-position: left; */
    /* background-size: 1%; */
    /* text-shadow: none; */
}
button:hover {
    font-size: 16px;
    color: rgba(130, 157, 218, 1);
    /* border: solid 1px rgba(13, 2, 44, 0.8); */
    border: none;
    background: none;
    /* background-color: rgba(130, 157, 218, 0.2); */
    /* background-repeat: no-repeat; */
    /* background-position: left; */
    /* background-size: 1%; */
    /* text-shadow: none; */
}

/* in case you wanted to give category buttons a different look */
#category-button {
    margin: 0 10px 0 10px
}

#pinned-box {
    padding-bottom: 5px;
    border-bottom: 1px dotted gray
}

#files-box {
    padding: 15px;
    border: 1px dotted gray;
    border-radius: 8px
}
/* from my nwggrid css file*/
#searchbox {
    background: none;
    border-color: rgba(130, 157, 218, 0.1);
    color: #ccc;
    margin-top: 20px;
    margin-bottom: 20px
}

